<% provide( :use_nav , "true") %> 

<!-- グループの情報を表示する -->
<div class="text-center m-5 position-fixed">
    <div class="d-flex col-12 m-5">

        <%= image_tag "https://picsum.photos/200/300" , class: "info-image mr-5 rounded" %>

        <div class="d-flex flex-column h4 pl-5">
            <div class="info-text d-flex">
                <div class="text-right">グループID:</div>
                <div class="ml-3"><%= @group[:groupid] %></div>
            </div>

            <div class="info-text d-flex">
                <div>グループ名:</div>
                <div class="ml-3"><%= @group[:groupname] %></div>
            </div>

            <div class="info-text d-flex">
                <div class>管理者:　　</div>
                <div class="ml-3">管理者名</div>
            </div>

            <div class="info-text d-flex">
                <div>メンバー:　</div>
                <div class="ml-3">グループの人数</div>
            </div>
            
            <div class="d-flex">
                <!-- 権限があるユーザにだけ押せるようにする -->
                <% if @group[:createuserid] == @user_id %>
                    <%= link_to "編集する" , "#" , class: "btn btn-primary btn-lg pr-5 pl-5 mr-3"%>
                <% end %>
                <%= button_to "チャット" , "#" , {id: "chat-btn" , class: "btn btn-success btn-lg pr-5 pl-5 mr-4" , disabled: true }  %>
                <%= form_with url: group_info_view_path(group_id: @group) , id: "group-form" do |form| %>
                    <%= form.submit "グループに招待する" , class: "btn btn-info btn-lg mr-4" , id: "group-btn" %>
                <% end %>
                <%= link_to "戻 る" , 'javascript:history.back()' , class: "btn btn-secondary btn-lg pr-5 pl-5"%>
            </div>
        </div>
    </div>
</div>