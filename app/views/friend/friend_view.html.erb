<% provide( :use_nav , "true") %> 
<div class="row">
    <div class ="container text-right mt-3">
        <%= link_to("フレンドを探す" , friend_search_path , class: "btn btn-outline-primary" , type: "button")%>
    </div>
<!-- グループ一覧の画像を表示 -->
    <% for friend in @friends do %>      <!-- データベースから送られてきた分だけループする -->
        <div class="col-md-6 col-10 text-center mt-5">
            <!-- aタグの代わりにlink_toを使用する（後でユーザごとに別のurlにする）-->
            <%= link_to(friend_info_view_path(friend_id: friend[:userid]), class: "col-md-6 col-10 text-center mt-5") do %>
                <%= image_tag "https://picsum.photos/200/300" , class: "view-images" %>
                <div class="image-name col-12 ml-md-2"><%= friend[:name] %></div>
            <% end %>
        </div> 
    <% end %>
</div>