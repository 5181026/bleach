<% provide( :use_nav , "true") %> 

<!-- ユーザの情報を表示する -->
<div class="text-center m-5 position-fixed">
    <div class="d-flex col-12 m-5">
        <div>
        <%= image_tag "" , class: "info-image mr-5 rounded" , id: "mypage-image" %>
        </div>
        <div class="d-flex flex-column h4 pl-5">
            <div class="info-text d-flex">
                <div class="text-right">ユーザID:</div>
                <div class="ml-3"><%= session[:user]["user_id"] %></div>
            </div>

            <div class="info-text d-flex">
                <div>ユーザ名:</div>
                <div class="ml-3"><%= session[:user]["user_name"]%></div>
            </div>

            <div class="info-text d-flex">
                <div class>　メール:</div>
                <div class="ml-3"><%= replace_to_str(session[:user]["user_mail"]) %></div>
            </div>

            <div class="info-text d-flex">
                <div>　　年齢:</div>
                <div class="ml-3"><%= replace_to_str(session[:user]["user_age"]) %></div>
            </div>
            
            <div>
                <%= link_to "編集する" , user_edit_path , class: "btn btn-primary btn-lg pr-5 pl-5"%>
                <%= link_to "戻 る" , "javascript:history.back()" , class: "btn btn-secondary btn-lg pr-5 pl-5"%>
            </div>
        </div>
    </div>
</div>

