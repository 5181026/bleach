<% provide( :use_nav , "true") %> 
<% @time_lines.each do |time_line| %>
  <div class="card col-8 offset-lg-2 offset-1 h6">
    <div class="card-header">
      <%= image_tag "https://picsum.photos/200/300" , class: "time-line-image" %>
      <%= time_line[:postuserid] %>
      <span class="time-line-date"><%= time_line[:date].strftime("%Y/%m/%d %H:%M") %></span>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p class="card-content"><%= time_line[:content] %></p>
        <footer class="text-muted"><i class="material-icons ml-4">thumb_up</i><span class="m-0 p-0"> 1</span></footer>
      </blockquote>
    </div>
  </div>
<% end %>